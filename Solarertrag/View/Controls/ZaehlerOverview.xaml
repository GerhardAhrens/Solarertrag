<UserControl
    x:Class="Solarertrag.View.Controls.ZaehlerOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:libConverter="clr-namespace:EasyPrototypingNET.WPF.Converter;assembly=EasyPrototypingNET"
    xmlns:libCore="clr-namespace:EasyPrototypingNET.Core;assembly=EasyPrototypingNET"
    xmlns:libWPF="clr-namespace:EasyPrototypingNET.WPF;assembly=EasyPrototypingNET"
    xmlns:local="clr-namespace:Solarertrag.View.Controls"
    xmlns:localConverter="clr-namespace:Solarertrag.Converter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <localConverter:RowNumberConverter x:Key="rowNumberConverter" />
        <localConverter:YearToGroupExpanderConverter x:Key="YearToGroupExpanderConverter" />
        <localConverter:ZaehlerStandConverter x:Key="ZaehlerStandConverter" />
        <localConverter:IntToVisibleConverter x:Key="IntToVisibleConverter" />

        <Style x:Key="BlueBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FF6B93CC" />
            <Setter Property="BorderThickness" Value="4" />
            <Setter Property="CornerRadius" Value="2" />
            <Setter Property="Padding" Value="2" />
        </Style>

        <LinearGradientBrush x:Key="SubtleBlue" StartPoint="0.476,1.363" EndPoint="0.476,-0.09">
            <GradientStop Offset="0.013" Color="#FF7A8EEC" />
            <GradientStop Offset="1" Color="#FF6B93CC" />
            <GradientStop Offset="0.54" Color="#FFF7F6F7" />
            <GradientStop Offset="0.46" Color="#FFEDEEF4" />
        </LinearGradientBrush>

        <Style x:Key="ColHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="2" />
        </Style>

        <DataTemplate x:Key="VerbrauchColHeader">
            <TextBlock Style="{StaticResource ResourceKey=ColHeaderText}">
                <Run Text="Zählerstand" />
                <LineBreak />
                <Run FontSize="9" Text="Verbrauch in KW/h" />
            </TextBlock>
        </DataTemplate>

        <DataTemplate x:Key="VerbrauchCellTemplate">
            <TextBlock
                Width="60"
                FontWeight="Medium"
                Foreground="DarkBlue"
                Text="{Binding Path=Verbrauch}"
                TextAlignment="Right" />

        </DataTemplate>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding
            Key="E"
            Command="{Binding Path=CmdAgg[EditDetailCommand]}"
            Modifiers="Ctrl" />

        <KeyBinding
            Key="N"
            Command="{Binding Path=CmdAgg[NewDetailCommand]}"
            Modifiers="Ctrl" />

        <KeyBinding
            Key="D"
            Command="{Binding Path=CmdAgg[DeleteDetailCommand]}"
            Modifiers="Ctrl" />

        <KeyBinding Key="Delete" Command="{Binding Path=CmdAgg[DeleteDetailCommand]}" />
    </UserControl.InputBindings>

    <libWPF:SimpleGrid Columns="*" Rows="30,*">
        <libWPF:SimpleGrid
            Grid.Row="0"
            Grid.Column="0"
            Columns="Auto,*,Auto,*"
            Rows="30">
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Width="70"
                Margin="10,0"
                VerticalAlignment="Center"
                Text="Filter" />

            <libWPF:TextBoxEx Grid.Column="1" Text="{Binding Path=FilterText, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Grid.Column="2"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Visibility="{Binding Path=SelektiertVerbrauch, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <Run FontWeight="Medium" Text="{Binding Path=SelektiertVerbrauchText, UpdateSourceTrigger=PropertyChanged, FallbackValue=N/A}" />
            </TextBlock>
        </libWPF:SimpleGrid>

        <!--#region ListView Definition-->
        <ListView
            Name="lvwMain"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            libWPF:ListViewSort.AutoSort="True"
            Background="WhiteSmoke"
            IsSynchronizedWithCurrentItem="True"
            ItemContainerStyle="{StaticResource ResourceKey=lvwItemContainerStyle}"
            ItemsSource="{Binding Path=DialogDataView, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding Path=CurrentSelectedItem, UpdateSourceTrigger=PropertyChanged}"
            SelectionMode="Extended"
            Style="{StaticResource ResourceKey=lvwMainStyle}"
            Tag="{Binding Path=ZaehlerStandSource}"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.IsVirtualizingWhenGrouping="True">

            <ListView.Resources>
                <Style TargetType="ScrollBar">
                    <EventSetter Event="PreviewMouseDoubleClick" Handler="ScrollBar_PreviewMouseDoubleClick" />
                </Style>
            </ListView.Resources>

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding Path=DataContext.CmdAgg[EditDetailCommand], RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}" CommandParameter="{Binding ElementName=lvwMain, Path=SelectedItem}" />
                </i:EventTrigger>

                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding Path=DataContext.CmdAgg[SelectionChangedCommand], RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}" CommandParameter="{Binding ElementName=lvwMain, Path=SelectedItems}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListView.InputBindings>
                <KeyBinding
                    Key="Enter"
                    Command="{Binding Path=DataContext.CmdAgg[EditDetailCommand], RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                    CommandParameter="{Binding ElementName=lvwMain, Path=SelectedItem}" />
            </ListView.InputBindings>

            <ListView.GroupStyle>
                <GroupStyle HidesIfEmpty="True">
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander IsExpanded="{Binding Path=Name, Mode=OneWay, Converter={StaticResource ResourceKey=YearToGroupExpanderConverter}}">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        VerticalAlignment="Bottom"
                                                        FontSize="20"
                                                        FontWeight="Bold"
                                                        Foreground="Blue"
                                                        Text="{Binding Path=Name}" />

                                                    <TextBlock
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Bottom"
                                                        FontSize="18"
                                                        FontStyle="Italic"
                                                        FontWeight="Bold"
                                                        Foreground="Green">
                                                        <Run Text="Anzahl (" />
                                                        <Run Text="{Binding Path=ItemCount, Mode=OneWay}" />
                                                        <Run Text=")" />
                                                    </TextBlock>

                                                    <TextBlock
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Bottom"
                                                        FontSize="18"
                                                        FontStyle="Normal"
                                                        FontWeight="Medium"
                                                        Foreground="Blue">
                                                        <TextBlock.Text>
                                                            <localConverter:ConverterBindableParameter
                                                                Binding="{Binding ElementName=lvwMain, Path=Tag}"
                                                                Converter="{StaticResource ResourceKey=ZaehlerStandConverter}"
                                                                ConverterParameter="{Binding Path=Name}" />
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.ContextMenu>
                <ContextMenu Focusable="True" IsEnabled="{Binding Path=IsContextMenuEnabled, UpdateSourceTrigger=PropertyChanged}">
                    <MenuItem
                        Command="{Binding Path=CmdAgg[DeleteDetailCommand]}"
                        Header="Aktueller Eintrag löschen (Ctrl-D)"
                        Icon="{StaticResource ResourceKey=IconDeleteItem}" />

                    <MenuItem
                        Command="{Binding Path=CmdAgg[EditDetailCommand]}"
                        Header="Aktueller Eintrag ändern (Ctrl-E)"
                        Icon="{StaticResource ResourceKey=IconEditItem}" />

                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="*">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Transparent" BorderThickness="0">
                                    <Grid Margin="2">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Foreground="Gray"
                                            TextAlignment="Right">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource rowNumberConverter}">
                                                    <Binding />
                                                    <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ListView}}" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn
                        Width="50"
                        libWPF:ListViewSort.PropertyName="Year"
                        DisplayMemberBinding="{Binding Path=Year}"
                        Header="Jahr"
                        HeaderContainerStyle="{StaticResource ResourceKey=lvwColumnCenterBold}" />

                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding Path=Month}"
                        Header="Monat"
                        HeaderContainerStyle="{StaticResource ResourceKey=lvwColumnCenterBold}" />

                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding Path=Day}"
                        Header="Tag"
                        HeaderContainerStyle="{StaticResource ResourceKey=lvwColumnCenterBold}" />

                    <GridViewColumn
                        Width="85"
                        CellTemplate="{StaticResource ResourceKey=VerbrauchCellTemplate}"
                        HeaderTemplate="{StaticResource ResourceKey=VerbrauchColHeader}" />

                    <GridViewColumn
                        Width="500"
                        DisplayMemberBinding="{Binding Path=Description}"
                        HeaderContainerStyle="{StaticResource ResourceKey=lvwHeaderLeft}" />
                </GridView>
            </ListView.View>
        </ListView>
        <!--#endregion ListView Definition-->
    </libWPF:SimpleGrid>
</UserControl>
